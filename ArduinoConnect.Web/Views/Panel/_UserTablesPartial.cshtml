@model IEnumerable<ArduinoConnect.Web.ResponseModels.UserTableModel>

<div>
    <h2 class="section-header">Tables</h2>
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="">Number of tables: @Model.Count()</h4>
        <a href="#" class="">
            <i class="fa fa-plus"></i>
            <span>Create new table</span>
        </a>
    </div>


    @if (Model.Count() > 0)
    {
    <table class="table">
        <thead>
            <tr>
                <th>Table ID</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableDescription)
                    </td>
                    <td class="d-flex">
                        <a class="btn btn-primary mx-1" asp-action="DataTable" asp-route-id="@item.TableID">Show</a>
                        <a class="btn btn-danger trigger-btn" data-toggle="modal" data-target="#modalDelete" data-id="@item.TableID" href="#">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <div class="justify-content-center text-center">
            <button class="btn btn-primary">Create new table</button>
        </div>
    }

</div>